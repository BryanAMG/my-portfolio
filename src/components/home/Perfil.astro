---
import foto from "@assets/foto_de_perfil.webp";
import Blob from "./Blob.astro";
---

<figure>
  <Blob />
  <img src={foto} alt="Foto de perfil de Bryan Armando" />
</figure>

<style>
  figure {
    width: 300px;
    overflow: hidden;
    height: 300px;
    position: relative;
    display: grid;
    place-items: center;
    margin-block: 2.5rem;
  }
  img {
    width: 210px;
    aspect-ratio: 1;
    background-color: var(--bg-brand);
    border-radius: 54% 46% 70% 30% / 47% 69% 31% 53%;
    object-fit: cover;
    object-position: bottom;
  }
  @media (max-width: 690px) {
    figure {
      margin-bottom: 0;
    }
  }
</style>
