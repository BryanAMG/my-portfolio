---
import { Language } from "src/type";
const { languages } = Astro.props;
---

<footer>
  <ul>
    {
      languages.map((languaje: Language) => {
        const { icon, color = "#fff" } = languaje;
        const styleColor = `color : ${color}`;
        const Icon = icon;

        return (
          <li style={styleColor}>
            <Icon />
          </li>
        );
      })
    }
  </ul>
</footer>

<style>
  footer {
    flex: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding-inline: 0.8rem;
    padding-top: 0.4rem;
    padding-bottom: 0.8rem;
  }
  ul li {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 30px;
  }
</style>
