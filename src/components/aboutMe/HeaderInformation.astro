---
import perfilTwitter from "@assets/perfil-twitter.webp";
import Options from "@components/icons/twitter-card/Options.astro";
import emoji from "@assets/peruEmji.webp";
---

<header>
  <div class="user-infor">
    <img src={perfilTwitter} alt="Perfil de Twitter" width="50" height="50" />
    <div class="username">
      <h3>
        Bryan Mamani Gonzalez <img
          src={emoji}
          alt="Emoji Peru"
          width="20"
          height="20"
        />
      </h3>
      <span>@Bryan24Armando</span>
    </div>
  </div>
  <figure>
    <Options />
  </figure>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    gap: 0.5rem;
  }
  .user-infor {
    display: flex;
    gap: 0.5rem;
  }
  .username {
    display: flex;
    flex-direction: column;
  }
  .username span {
    color: var(--bg-brand-twitter);
  }
  .username h3 {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
  }
  div img {
    border-radius: 50%;
  }
  figure {
    width: 15px;
    align-self: flex-start;
    display: flex;
  }
</style>
