---
import Container from "./Container.astro";
import logo from "@assets/logo.webp";
import { socialMedia } from "@utils/constans";
import ButtonContact from "./ButtonContact.astro";
import AstroIcon from "@icons/tecnologies/Astro.astro";
---

<footer>
  <Container>
    <div class="footer-container">
      <figure>
        <img src={logo} alt="Logo " />
      </figure>
      <div class="footer-madeBy">
        <p>Portafolio hecho con :</p>
        <span><AstroIcon /></span>
      </div>
      <ul>
        {
          socialMedia.map((social) => (
            <li>
              <ButtonContact social={social} isCircle />
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
</footer>

<style>
  footer {
    background-color: var(--bg-blur);
    padding-block: 2.5rem;
  }
  .footer-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  figure {
    display: flex;
    align-items: center;
  }
  img {
    width: 40px;
    height: 40px;
  }
  .footer-madeBy {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    line-height: 0;
  }
  .footer-madeBy p {
    display: block;
  }
  .footer-madeBy span {
    width: 50px;
    color: #ff5d01;
  }
  ul {
    display: flex;
    gap: 1.5rem;
  }
  ul li {
    list-style: none;
    transition: background-color 0.2s ease-in-out;
  }

  @media (max-width: 690px) {
    .footer-container {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
