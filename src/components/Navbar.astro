---
import Menu from "./icons/Menu.astro";
---

<label for="menu">
  <Menu />
</label>
<input type="checkbox" id="menu" checked={false} />
<aside>
  <nav>
    <a href="#home" class="selected">Inicio</a>
    <a href="#projects">Proyectos</a>
    <a href="#about">Sobre m√≠</a>
  </nav>
</aside>

<script>
  const linksEls = document.querySelectorAll("nav a[href^='#']");
  const menuEl = document.getElementById("menu") as HTMLInputElement;

  linksEls.forEach((link) => {
    link.addEventListener("click", () => {
      menuEl.checked = false;
    });
  });
</script>

<style>
  aside {
    display: flex;
    align-items: center;
    z-index: 20;
  }
  #menu {
    display: none;
  }
  nav {
    display: flex;
    gap: 1rem;
    font-size: 1.1rem;
    font-weight: 500;
  }
  a {
    color: var(--font-color-primary);
    padding: 0.3rem 0.7rem;
    box-shadow: inset 0 0 0 0 var(--bg-brand);
    border-radius: 5px;
    transition: box-shadow 0.3s ease-in-out;
  }
  .selected,
  a:hover {
    box-shadow: inset 110px 0 0 0 var(--bg-brand);
  }

  label {
    display: none;
    cursor: pointer;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: background-color 0.3s ease-in-out;
  }
  @media (max-width: 690px) {
    aside {
      position: fixed;
      justify-content: end;
      top: 65.59px;
      bottom: 0;
      left: 0;
      width: 100%;
      transition: clip-path 0.3s ease-in;
      clip-path: circle(0% at 100% 0);
    }
    #menu:checked ~ aside {
      clip-path: circle(141.2% at 100% 0);
    }
    label {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    label:hover {
      background-color: var(--bg-brand);
    }
    nav {
      width: 100%;
      height: 100%;
      max-width: 390px;
      align-items: center;
      justify-content: center;
      background: var(--bg-blur);
      flex-direction: column;
    }
  }
</style>
